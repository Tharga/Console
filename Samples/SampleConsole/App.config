<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <appSettings>
    <add key="InformationColor" value="Green" />
    <add key="WarningColor" value="Yellow" />
    <add key="ErrorColor" value="Red" />
    <add key="EventColor" value="Cyan" />
    <add key="HelpColor" value="Magenta" />
    <add key="LogInformation" value="false" />
    <add key="TraceDefault" value="false" />
    <add key="TraceInformation" value="true" />
  </appSettings>
  <log4net debug="false">
    <appender name="ThargaConsoleAppender" type="Tharga.Toolkit.Console.Log4Net.ThargaConsoleAppender, Tharga.Toolkit.Console.Log4Net">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [%t] %-5p %c %m" />
      </layout>
    </appender>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="ThargaConsoleAppender" />
    </root>
  </log4net>
</configuration>